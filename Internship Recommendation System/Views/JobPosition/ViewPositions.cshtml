@model IEnumerable<Internship_Recommendation_System.ViewModels.JobPositionViewModel>

@{
    ViewBag.Title = "View Positions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Job Positions -->
<div class="col-12">
    <div class="card recent-sales overflow-auto">

        <div class="card-body">
            <table class="table table-borderless datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.JobPosition)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JobDescription)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobPosition)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobDescription)
                            </td>
                            <td>
                                <a class="btn btn-danger" href="#" onclick="deleteJOB(@item.JobID)">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

    </div>
</div>
<!-- End Job Positions -->
<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary"><i class="bi bi-info-circle-fill g-5"></i>&nbsp;Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="deleteModal-modal-body">
                Are You Sure You want to Delete this Record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a id="deleteBtn" class="btn btn-danger" href="#">Delete</a>
            </div>
        </div>
    </div>
</div>
<!-- Delete Modal-->
<!-- General Modal -->
<div class="modal fade" id="generalJOBModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary"><i class="bi bi-info-circle-fill g-5"></i>&nbsp;Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="generalJOBModal-modal-body">

            </div>
        </div>
    </div>
</div>
<!-- End General Modal-->

@section Scripts{
    <script src="~/ViewScripts/Job.js"></script>
}