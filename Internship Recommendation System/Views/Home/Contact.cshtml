@{
    ViewBag.Title = "Contact";
}

<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Contact Form</h5>
            <div class="col">
                <img src="~/Images/contact.png" alt="Contact" class="img-thumbnail rounded mx-auto d-block mb-5" />
            </div>
            
            <!-- Contact Form -->
            <form class="row g-3 needs-validation" novalidate>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label fw-bold">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label fw-bold">Phone No.</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label fw-bold">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label fw-bold">Message</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" style="height: 150px" required></textarea>
                    </div>
                </div>               

                <div class="row mb-3 justify-content-center">
                    <input type="submit" class="btn btn-primary w-50" value="Submit Form">
                </div>
            </form>
            <!-- End Contact Form -->

        </div>
    </div>

</div>